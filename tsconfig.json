{
  "compilerOptions": {
    "esModuleInterop": true,
    "paths": {
      "@entity/*": ["src/entity/*"]
    },
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./"
  }
}
